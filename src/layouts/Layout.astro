---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SocialMedia from '../components/SocialMedia.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

        <!--   PWA, Manifest, Icons   -->
		<meta name="theme-color" content="#000000">
		<meta name="apple-mobile-web-app-title" content="Ale Schwartz Portfolio" />
		<meta name="apple-mobile-web-app-capable" content="no" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black" />
		<link rel="shortcut icon" href="icons/favicon.ico">
		<link rel="apple-touch-icon" href="icons/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="icons/favicon-16x16.png">
		<link rel="icon" type="image/png" sizes="32x32" href="icons/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="192x192" href="icons/android-chrome-192x192.png">
		<link rel="icon" type="image/png" sizes="512x512" href="icons/android-chrome-512x512.png">

		<script is:inline src="/registerSW.js"></script>
		<link rel="manifest" href="/manifest.webmanifest" />

		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<slot />
		<SocialMedia/>
		<Footer/>
	</body>
</html>

<style is:global>
	@import url(https://fonts.googleapis.com/css2?family=Lobster&family=Montserrat:wght@400;600;700&family=Open+Sans:wght@400;600;700&display=swap);
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);

		--font-title: 'Lobster', cursive;
		--font-text: 'Montserrat', sans-serif;

		--color-primary: #ffffff;
		--color-secondary: #e2e2e2;
		--color-third: #313434;
		--color-fourth: #111190;
	}
	body {
		padding: 0%;
		margin: 0%;
		font-family: var(--font-text);
		box-sizing: border-box;
	}
</style>
